<Window x:Class="comp_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:comp_app"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="350">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="resultLabel"
               Content="0" 
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               FontSize="60"
               Grid.ColumnSpan="4"/>
        <Button x:Name="acBtn"
                Content="AC" 
                Grid.Row="1" 
                Margin="5" />
        <Button x:Name="negativeBtn"
                Content="+/1"
                Grid.Row="1"
                Margin="5"
                Grid.Column="1"/>
        <Button x:Name="percentageBtn"
                Content="%"
                Grid.Row="1"
                Margin="5"
                Grid.Column="2"/>
        <Button x:Name="divideBtn"
                Content="/"
                Grid.Row="1"
                Margin="5"
                Grid.Column="3"/>
        <Button x:Name="sevenBtn"
                Content="7" 
                Grid.Row="2" 
                Margin="5" />
        <Button x:Name="eightBtn"
                Content="8"
                Grid.Row="2"
                Margin="5"
                Grid.Column="1"/>
        <Button x:Name="nineBtn"
                Content="9"
                Grid.Row="2"
                Margin="5"
                Grid.Column="2"/>
        <Button x:Name="multiplyBtn"
                Content="*"
                Grid.Row="2"
                Margin="5"
                Grid.Column="3"/>
        <Button x:Name="sixBtn"
                Content="6" 
                Grid.Row="3" 
                Margin="6" />
        <Button x:Name="fiveBtn"
                Content="5"
                Grid.Row="3"
                Margin="5"
                Grid.Column="1"/>
        <Button x:Name="fourBtn"
                Content="4"
                Grid.Row="3"
                Margin="5"
                Grid.Column="2"/>
        <Button x:Name="minusBtn"
                Content="-"
                Grid.Row="3"
                Margin="5"
                Grid.Column="3"/>
        <Button x:Name="threeBtn"
                Content="3" 
                Grid.Row="4" 
                Margin="6" />
        <Button x:Name="twoBtn"
                Content="2"
                Grid.Row="4"
                Margin="5"
                Grid.Column="1"/>
        <Button x:Name="oneBtn"
                Content="1"
                Grid.Row="4"
                Margin="5"
                Grid.Column="2"/>
        <Button x:Name="addBtn"
                Content="+"
                Grid.Row="4"
                Margin="5"
                Grid.Column="3"/>
        <Button x:Name="zeroBtn"
                Content="0" 
                Grid.Row="5" 
                Margin="6" 
                Grid.ColumnSpan="2"/>
        <Button x:Name="decimalBtn"
                Content="."
                Grid.Row="5"
                Margin="5"
                Grid.Column="2"/>
        <Button x:Name="equalsBtn"
                Content="="
                Grid.Row="5"
                Margin="5"
                Grid.Column="3"/>

    </Grid>
</Window>
